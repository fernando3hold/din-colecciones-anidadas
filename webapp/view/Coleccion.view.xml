<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form" controllerName="dinosol.din-colecciones-anidadas.controller.Coleccion"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<uxap:ObjectPageLayout id="opl" useIconTabBar="true" showTitleInHeaderContent="true" navigate=".onNavTab"
		sections="{data>/coleccion/niveles}" subSectionLayout="TitleOnTop" showFooter="{viewModel>/editMode}">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<f:Avatar src="sap-icon://dishwasher" class="sapUiTinyMarginEnd"/>
					<Title text="{data>/coleccion/id}" wrapping="true" class="sapUiTinyMarginEnd"/>
				</uxap:expandedHeading>
				<uxap:snappedHeading>
					<FlexBox fitContainer="true" alignItems="Center">
						<f:Avatar src="sap-icon://dishwasher" class="sapUiTinyMarginEnd"/>
						<Title text="{data>/coleccion/id} - {data>/coleccion/id}" wrapping="true"/>
					</FlexBox>
				</uxap:snappedHeading>
				<uxap:expandedContent>
					<Text text="campo 1"/>
				</uxap:expandedContent>
				<!--<uxap:navigationActions>-->
				<!--	<OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose"/>-->
				<!--</uxap:navigationActions>-->
				<uxap:actions>
					<ToggleButton text="Editar" press=".toggleMode" type="Transparent"/>
				</uxap:actions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>
		<uxap:headerContent>
			<FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<f:Avatar src="sap-icon://dishwasher" displaySize="L" displayShape="Square" class="sapUiTinyMarginEnd"/>
				<VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<Label text="{i18n>label.proveedor}"/>
					<Text text="campo 2"/>
				</VBox>
				<VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<Label text="{i18n>label.descripcion}"/>
					<Text text="campo 3"/>
				</VBox>
				<VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<Label text="{i18n>label.centro}"/>
					<Text text="campo 4"/>
				</VBox>
			</FlexBox>
		</uxap:headerContent>
		<uxap:sections>
			<uxap:ObjectPageSection showTitle="true" titleUppercase="false" title="Nivel {data>NumNivel}">
				<uxap:ObjectPageSubSection title="MÃ³dulo">
					<uxap:blocks>
						<VBox>
							<HBox width="100%">
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Modulo" design="Bold"/>
									<Text text="{data>modulo/Modulo}"/>
								</VBox>
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Denominacion" design="Bold"/>
									<Text text="{data>modulo/Denominacion}"/>
								</VBox>
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Clase" design="Bold"/>
									<Text text="{data>modulo/Clase}"/>
								</VBox>
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Fecha inicio" design="Bold"/>
									<Text text="{path : 'data>modulo/FechaInicio', formatter: '.formatter.formatDateShow'}" visible="{viewModel>/displayMode}"/>
									<DatePicker value="{data>modulo/FechaInicio}" visible="{viewModel>/editMode}"/>
								</VBox>
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Fecha fin" design="Bold"/>
									<Text text="{path: 'data>modulo/FechaFin', formatter: '.formatter.formatDateShow'}" visible="{viewModel>/displayMode}"/>
									<DatePicker value="{data>modulo/FechaFin}" visible="{viewModel>/editMode}"/>
								</VBox>
							</HBox>
							<List items="{data>modulo/articulos}" width="auto" class="sapUiMediumMarginBegin sapUiLargeMarginTop" mode="{= ${viewModel>/displayMode}? 'None': 'MultiSelect' }">
								<headerToolbar>
									<Toolbar>
										<content>
											<Title text="{= 'Articulos ('+ ${data>modulo/articulos}.length +')'}"/>
										</content>
									</Toolbar>
								</headerToolbar>
								<items>
									<StandardListItem title="{data>Denominacion}" description="{data>Articulo}"
										info="{parts: ['data>FechaInicio', 'data>FechaFin'], formatter: '.formatter.formatDateShowTwo'}"/>
								</items>
							</List>
						</VBox>
					</uxap:blocks>
				</uxap:ObjectPageSubSection>
				<uxap:ObjectPageSubSection title="Surtido">
					<uxap:blocks>
						<VBox>
							<HBox width="100%">
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Surtido" design="Bold"/>
									<Text text="{data>surtido/Surtido}"/>
								</VBox>
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Denominacion" design="Bold"/>
									<Text text="{data>surtido/Denominacion}"/>
								</VBox>
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Fecha" design="Bold"/>
									<Text text="{path: 'data>surtido/FechaInicio' , formatter: '.formatter.formatDateShow'}" visible="{viewModel>/displayMode}"/>
									<DatePicker value="{data>surtido/FechaInicio}" visible="{viewModel>/editMode}"/>
								</VBox>
								<VBox class="sapUiLargeMarginBeginEnd">
									<Label text="Fecha fin" design="Bold"/>
									<Text text="{path: 'data>surtido/FechaFin', formatter: '.formatter.formatDateShow'}" visible="{viewModel>/displayMode}"/>
									<DatePicker value="{data>surtido/FechaFin}" visible="{viewModel>/editMode}"/>
								</VBox>
							</HBox>
							<List items="{data>surtido/tiendas}" width="auto" class="sapUiMediumMarginBegin sapUiLargeMarginTop" mode="{= ${viewModel>/displayMode}? 'None': 'MultiSelect' }">
								<headerToolbar>
									<Toolbar>
										<content>
											<Title text="{= 'Tiendas ('+ ${data>surtido/tiendas}.length +')'}"/>
										</content>
									</Toolbar>
								</headerToolbar>
								<items>
									<StandardListItem title="{data>Denominacion}" info="{data>Tiendas}"
										description="{parts: ['data>FechaInicio', 'data>FechaFin'], formatter: '.formatter.formatDateShowTwo'}"/>
								</items>
							</List>
						</VBox>
					</uxap:blocks>
				</uxap:ObjectPageSubSection>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:footer>
			<Bar>
				<contentRight>
					<Button text="Mover" icon="sap-icon://action" press="onPressMover" type="Transparent"/>
					<Button text="Enviar" icon="sap-icon://paper-plane" press="onPressEnviar" type="Emphasized"/>
				</contentRight>
			</Bar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>