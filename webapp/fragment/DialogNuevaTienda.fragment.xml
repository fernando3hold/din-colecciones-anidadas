<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:form="sap.ui.layout.form">
	<Dialog title="{i18n>title.nuevaTienda}" showHeader="false">
		<form:SimpleForm title="{i18n>title.nuevaTienda}" class="sapUiResponsiveMargin" layout="ColumnLayout" width="500px"
			singleContainerFullSize="true" labelSpanL="12" labelSpanXL="12" labelSpanM="12">
			<!-- PROVEEDOR -->
			<Label text="{i18n>label.tienda}"/>
			<!--	<Input id="tienda" value="{newTienda>/Locnr}" valueLiveUpdate="false" showValueHelp="true" valueHelpRequest=".onRequestValueHelpArticulo"
				change=".onChangeArticulo"/> -->
			<Select id="tienda" selectedKey="{newTienda>/Locnr}" change=".onChangeTienda" forceSelection="false"
				items="{ path: 'TiendasData>/', sorter: { path: 'Tienda' } }">
				<core:Item key="{TiendasData>Tienda}" text="{TiendasData>Tienda} - {TiendasData>Descripcion}"/>
			</Select>
			<!-- FECHA INICIO -->
			<Label text="{i18n>label.fechaInicio}"/>
			<DatePicker id="inicio" value="{newTienda>/Datab}" change=".onChangeDatePicker" valueFormat="yyyyMMdd" displayFormat="dd/MM/yyyy"/>
			<!-- FECHA FIN -->
			<Label text="{i18n>label.fechaFin}"/>
			<DatePicker id="fin" value="{newTienda>/Datbi}" change=".onChangeDatePicker" valueFormat="yyyyMMdd" displayFormat="dd/MM/yyyy"/>
		</form:SimpleForm>
		<beginButton>
			<Button text="Guardar" press=".onPressAñadirTienda"/>
		</beginButton>
		<endButton>
			<Button text="Cerrar" press=".onPressCancelarAñadirTienda"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>